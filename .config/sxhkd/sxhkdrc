super + q
    alacritty
super + d
    rofi -show run
super + o
    dunstctl close
super + p
    flameshot gui

super + shift + comma
    playerctl previous
super + shift + period
    playerctl play-pause
super + shift + slash
    playerctl next

super + Escape
    pkill -USR1 -x sxhkd

# quit/restart
super + ctrl + {q,r}
    bspc {quit,wm -r}

# close/kill
super + {c,shift + k}
    bspc node -{c,k}

# toggle monocle (fullscreen) layout
super + m
    bspc desktop -l next

# set layout
super + {t,shift + t,f}
    bspc node -t {tiled,pseudo_tiled,fullscreen}

super + ctrl + {s,p}
    bspc node -g {sticky,private}

# focus or swap
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus next/prev window
super + {_,shift + }n
    bspc node -f {next,prev}.local.!hidden.window

# focus next/prev desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus last used desktop
super + Tab
    bspc desktop -f last

# focus desktop by number
super + {_,shift + }{1-9}
    bspc {desktop -f,node -d} '^{1-9}'

# resize window
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
